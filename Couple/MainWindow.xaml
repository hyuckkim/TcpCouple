<Window x:Class="Couple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Couple"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Polyline x:Name="arrow" Points="100 200, 300 200, 250 150" 
    Stroke="Blue" StrokeThickness="10">
            <Polyline.RenderTransform>
                <RotateTransform CenterX="200" CenterY="200" Angle="0" />
            </Polyline.RenderTransform>
        </Polyline>
        <Label x:Name="console" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
